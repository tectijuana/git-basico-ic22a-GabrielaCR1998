EJERCICIO 42:

L = int(input('escribe una cantidad de LIBRAS para convertir a kilogramos: '))
O = int(input('escribe una cantidad de ONZAS para convertir a kilogramos: '))
libra = 2.2
onza = 35.2
kiloalibra = L * libra
kiloaonza = O * onza
print(L, "libras equivalen a ", kiloalibra, "KG" )
print(O, "onzas equivalen a ", kiloaonza, "KG" )

------------------------------------------------------------------------------------------------------------------------------------------------------------------
EJERCICIO 43:

cm = 30.48 
print("Un pie es igual 30.48 cm entonces,",)
pieacm = 1000 * cm
print("1000 pies es igual a ", pieacm )
